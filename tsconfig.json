{
  "compilerOptions": {
    "types": ["bun-types"],

    "target": "esnext",
    "module": "commonjs",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src"
  }
}
